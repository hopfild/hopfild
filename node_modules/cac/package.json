{
  "name": "cac",
  "version": "6.6.1",
  "description": "Simple yet powerful framework for building command-line apps.",
  "repository": {
    "type": "git",
    "url": "egoist/cac"
  },
  "license": "MIT",
  "author": "egoist <0x142857@gmail.com>",
  "exports": {
    ".": {
      "import": "./mod.mjs",
      "require": "./dist/index.js"
    },
    "./": "./",
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "module": "mod.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!**/__test__/**",
    "/mod.mjs",
    "/mod.js",
    "/mod.d.ts"
  ],
  "scripts": {
    "build": "rollup -c",
    "docs:api": "typedoc --out api-doc --readme none --exclude \"**/__test__/**\" --theme minimal",
    "prepublishOnly": "npm run build && cp mod.js mod.mjs",
    "test": "jest",
    "test:cov": "jest --coverage",
    "toc": "markdown-toc -i README.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm t && lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [
      "dist/**",
      "mod.js"
    ],
    "linters": {
      "*.{js,json,ts}": [
        "prettier --write",
        "git add"
      ],
      "*.md": [
        "markdown-toc -i",
        "prettier --write",
        "git add"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@types/execa": "^0.9.0",
    "@types/jest": "^23.3.9",
    "@types/mri": "^1.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint-config-rem": "^3.0.0",
    "events": "^3.0.0",
    "execa": "^1.0.0",
    "husky": "^1.2.0",
    "jest": "^24.9.0",
    "lint-staged": "^8.1.0",
    "markdown-toc": "^1.2.0",
    "mri": "^1.1.1",
    "prettier": "^1.15.2",
    "rollup": "^2.10.0",
    "rollup-plugin-dts": "^1.4.3",
    "rollup-plugin-esbuild": "^1.4.1",
    "semantic-release": "^15.12.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typedoc": "^0.17.6",
    "typescript": "^3.9.2"
  },
  "engines": {
    "node": ">=8"
  },
  "release": {
    "branch": "master"
  }
}
