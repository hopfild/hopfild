{
  "name": "trough",
  "version": "1.0.5",
  "description": "Middleware: a channel used to convey a liquid",
  "keywords": [
    "middleware",
    "ware"
  ],
  "bugs": "https://github.com/wooorm/trough/issues",
  "repository": "wooorm/trough",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "license": "MIT",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js",
    "wrap.js"
  ],
  "scripts": {
    "build": "npm run build-bundle && npm run build-mangle",
    "build-bundle": "browserify index.js -s trough > trough.js",
    "build-mangle": "browserify index.js -s trough -p tinyify > trough.min.js",
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "test": "npm run format && npm run build && npm run test-coverage",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js"
  },
  "xo": {
    "esnext": false,
    "ignores": [
      "trough.js"
    ],
    "prettier": true,
    "rules": {
      "unicorn/prefer-reflect-apply": "off",
      "unicorn/prefer-type-error": "off",
      "guard-for-in": "off"
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "nyc": {
    "branches": 100,
    "check-coverage": true,
    "functions": 100,
    "lines": 100
  },
  "dependencies": {},
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^15.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "xo": "^0.25.0"
  }
}
