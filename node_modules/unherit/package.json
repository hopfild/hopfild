{
  "name": "unherit",
  "version": "1.1.3",
  "description": "Clone a constructor without affecting the super-class",
  "keywords": [
    "clone",
    "super",
    "class",
    "constructor"
  ],
  "bugs": "https://github.com/wooorm/unherit/issues",
  "repository": "wooorm/unherit",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "license": "MIT",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "scripts": {
    "build": "npm run build-bundle && npm run build-mangle",
    "build-bundle": "browserify . -s unherit -o unherit.js",
    "build-mangle": "browserify . -s unherit -p tinyify -o unherit.min.js",
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "test": "npm run format && npm run build && npm run test-coverage",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js"
  },
  "xo": {
    "esnext": false,
    "ignores": [
      "unherit.js"
    ],
    "prettier": true,
    "rules": {
      "unicorn/prefer-reflect-apply": "off",
      "guard-for-in": "off"
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "dependencies": {
    "inherits": "^2.0.0",
    "xtend": "^4.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^15.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "xo": "^0.25.0"
  }
}
