{
  "name": "character-reference-invalid",
  "version": "1.1.4",
  "description": "HTML invalid numeric character reference information",
  "keywords": [
    "html",
    "entity",
    "numeric",
    "character",
    "reference",
    "replacement",
    "invalid",
    "name"
  ],
  "bugs": "https://github.com/wooorm/character-reference-invalid/issues",
  "repository": "wooorm/character-reference-invalid",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "license": "MIT",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "main": "index.json",
  "files": [
    "index.json"
  ],
  "scripts": {
    "build": "npm run build-bundle && npm run build-mangle",
    "build-bundle": "browserify index.json -s characterReferenceInvalid -o character-reference-invalid.js",
    "build-mangle": "browserify index.json -s characterReferenceInvalid -p tinyify -o character-reference-invalid.min.js",
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "generate": "node build",
    "test": "npm run generate && npm run format && npm run build && npm run test-api",
    "test-api": "node test"
  },
  "xo": {
    "esnext": false,
    "ignores": [
      "character-reference-invalid.js"
    ],
    "prettier": true
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "bail": "^1.0.0",
    "browserify": "^16.0.0",
    "concat-stream": "^2.0.0",
    "hast-util-select": "^3.0.0",
    "hast-util-to-string": "^1.0.0",
    "rehype-parse": "^6.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "unified": "^8.0.0",
    "xo": "^0.25.0"
  }
}
