{
  "name": "shelljs",
  "version": "0.8.4",
  "description": "Portable Unix shell commands for Node.js",
  "keywords": [
    "shelljs",
    "bash",
    "unix",
    "shell",
    "makefile",
    "make",
    "jake",
    "synchronous"
  ],
  "homepage": "http://github.com/shelljs/shelljs",
  "repository": {
    "type": "git",
    "url": "git://github.com/shelljs/shelljs.git"
  },
  "license": "BSD-3-Clause",
  "contributors": [
    "Nate Fischer <ntfschr@gmail.com> (https://github.com/nfischer)",
    "Brandon Freitag <freitagbr@gmail.com> (https://github.com/freitagbr)"
  ],
  "main": "./shell.js",
  "bin": {
    "shjs": "./bin/shjs"
  },
  "files": [
    "commands.js",
    "global.js",
    "make.js",
    "plugin.js",
    "shell.js",
    "bin",
    "src"
  ],
  "scripts": {
    "after-travis": "travis-check-changes",
    "changelog": "shelljs-changelog",
    "ci-or-install": "node scripts/ci-or-install",
    "codecov": "codecov",
    "gendocs": "node scripts/generate-docs",
    "lint": "eslint .",
    "release:major": "shelljs-release major",
    "release:minor": "shelljs-release minor",
    "release:patch": "shelljs-release patch",
    "test": "nyc --reporter=text --reporter=lcov ava test/*.js",
    "posttest": "npm run lint",
    "test-no-coverage": "ava test/*.js"
  },
  "ava": {
    "powerAssert": false,
    "serial": true
  },
  "dependencies": {
    "glob": "^7.0.0",
    "interpret": "^1.0.0",
    "rechoir": "^0.6.2"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "chalk": "^1.1.3",
    "codecov": "^3.0.2",
    "coffee-script": "^1.10.0",
    "eslint": "^2.0.0",
    "eslint-config-airbnb-base": "^3.0.0",
    "eslint-plugin-import": "^1.11.1",
    "nyc": "^11.3.0",
    "shelljs-changelog": "^0.2.0",
    "shelljs-release": "^0.3.0",
    "shx": "^0.2.0",
    "travis-check-changes": "^0.2.0"
  },
  "optionalDependencies": {},
  "engines": {
    "node": ">=4"
  }
}
