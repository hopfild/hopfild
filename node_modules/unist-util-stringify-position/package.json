{
  "name": "unist-util-stringify-position",
  "version": "1.1.2",
  "description": "Stringify a Unist node, position, or point",
  "keywords": [
    "unist",
    "position",
    "location",
    "point",
    "node",
    "stringify",
    "tostring",
    "util",
    "utility"
  ],
  "bugs": "https://github.com/syntax-tree/unist-util-stringify-position/issues",
  "repository": "syntax-tree/unist-util-stringify-position",
  "license": "MIT",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "scripts": {
    "build": "npm run build-bundle && npm run build-mangle",
    "build-bundle": "browserify index.js --no-builtins -s unistUtilStringifyPosition > unist-util-stringify-position.js",
    "build-mangle": "esmangle unist-util-stringify-position.js > unist-util-stringify-position.min.js",
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix",
    "test": "npm run format && npm run build && npm run test-coverage",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js"
  },
  "xo": {
    "esnext": false,
    "ignores": [
      "unist-util-stringify-position.js"
    ],
    "prettier": true,
    "rules": {
      "guard-for-in": "off",
      "no-var": "off",
      "prefer-arrow-callback": "off"
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "nyc": {
    "branches": 100,
    "check-coverage": true,
    "functions": 100,
    "lines": 100
  },
  "dependencies": {},
  "devDependencies": {
    "browserify": "^16.0.0",
    "esmangle": "^1.0.0",
    "nyc": "^11.0.0",
    "prettier": "^1.12.1",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.5.1",
    "xo": "^0.20.0"
  }
}
