{
  "name": "trim-trailing-lines",
  "version": "1.1.3",
  "description": "Remove final line feeds from a string",
  "keywords": [
    "trim",
    "final",
    "line",
    "newline",
    "characters"
  ],
  "bugs": "https://github.com/wooorm/trim-trailing-lines/issues",
  "repository": "wooorm/trim-trailing-lines",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "license": "MIT",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "scripts": {
    "build": "npm run build-bundle && npm run build-mangle",
    "build-bundle": "browserify . -s trimTrailingLines -o trim-trailing-lines.js",
    "build-mangle": "browserify . -s trimTrailingLines -p tinyify -o trim-trailing-lines.min.js",
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "test": "npm run format && npm run build && npm run test-coverage",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js"
  },
  "xo": {
    "esnext": false,
    "ignores": [
      "trim-trailing-lines.js"
    ],
    "prettier": true
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "nyc": {
    "branches": 100,
    "check-coverage": true,
    "functions": 100,
    "lines": 100
  },
  "dependencies": {},
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^15.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "xo": "^0.25.0"
  }
}
