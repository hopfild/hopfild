{
  "name": "collapse-white-space",
  "version": "1.0.6",
  "description": "Replace multiple white-space characters with a single space",
  "keywords": [
    "collapse",
    "white",
    "space"
  ],
  "bugs": "https://github.com/wooorm/collapse-white-space/issues",
  "repository": "wooorm/collapse-white-space",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "license": "MIT",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "scripts": {
    "build": "npm run build-bundle && npm run build-mangle",
    "build-bundle": "browserify . -s collapseWhiteSpace -o collapse-white-space.js",
    "build-mangle": "browserify . -s collapseWhiteSpace -p tinyify -o collapse-white-space.min.js",
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "test": "npm run format && npm run build && npm run test-coverage",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js"
  },
  "xo": {
    "esnext": false,
    "ignores": [
      "collapse-white-space.js"
    ],
    "prettier": true
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "nyc": {
    "branches": 100,
    "check-coverage": true,
    "functions": 100,
    "lines": 100
  },
  "dependencies": {},
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^15.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "xo": "^0.25.0"
  }
}
