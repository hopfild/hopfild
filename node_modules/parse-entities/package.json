{
  "name": "parse-entities",
  "version": "1.2.2",
  "description": "Parse HTML character references: fast, spec-compliant, positional information",
  "keywords": [
    "parse",
    "html",
    "character",
    "reference",
    "entity",
    "entities"
  ],
  "bugs": "https://github.com/wooorm/parse-entities/issues",
  "repository": "wooorm/parse-entities",
  "license": "MIT",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "browser": {
    "./decode-entity.js": "./decode-entity.browser.js"
  },
  "files": [
    "index.js",
    "decode-entity.js",
    "decode-entity.browser.js"
  ],
  "scripts": {
    "build": "npm run build-bundle && npm run build-mangle",
    "build-bundle": "browserify . -s parseEntities > parse-entities.js",
    "build-mangle": "browserify . -s parseEntities -p tinyify > parse-entities.min.js",
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "test": "npm run format && npm run build && npm run test-coverage && npm run test-browser",
    "test-api": "node test",
    "test-browser": "browserify test.js | tape-run",
    "test-coverage": "nyc --reporter lcov tape test.js"
  },
  "xo": {
    "esnext": false,
    "ignores": [
      "parse-entities.js"
    ],
    "prettier": true,
    "rules": {
      "no-self-compare": "off",
      "guard-for-in": "off",
      "max-depth": "off"
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "nyc": {
    "branches": 100,
    "check-coverage": true,
    "functions": 100,
    "lines": 100
  },
  "dependencies": {
    "character-entities": "^1.0.0",
    "character-entities-legacy": "^1.0.0",
    "character-reference-invalid": "^1.0.0",
    "is-alphanumerical": "^1.0.0",
    "is-decimal": "^1.0.0",
    "is-hexadecimal": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^14.0.0",
    "prettier": "^1.12.1",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.2.0",
    "tape-run": "^6.0.0",
    "tinyify": "^2.4.3",
    "xo": "^0.24.0"
  },
  "react-native": {
    "./decode-entity.js": "./decode-entity.js"
  }
}
